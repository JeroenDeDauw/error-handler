{
    "name": "szemul/error-handler",
    "description": "Simple extensible error handler",
    "license": "MIT",
    "minimum-stability": "stable",
    "require": {
        "php": "^8.0",
        "psr/log": "^1.0.1"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0.0",
        "jetbrains/phpstorm-attributes": "^1.0",
        "mockery/mockery": "^1.0",
        "phpstan/phpstan": "^0.12.80",
        "phpunit/phpunit": "^9.5.5",
        "wmde/psr-log-test-doubles": "^2.2"
    },
    "autoload": {
        "psr-4": {
            "Szemul\\ErrorHandler\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Szemul\\ErrorHandler\\Test\\": "tests"
        }
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true
    }
}
